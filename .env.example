# EmailTemplatesGen Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Microsoft Outlook/Graph API Configuration
OUTLOOK_CLIENT_ID=your_azure_ad_client_id
OUTLOOK_TENANT_ID=your_azure_ad_tenant_id
OUTLOOK_CLIENT_SECRET=your_azure_ad_client_secret
OUTLOOK_SENDER_ADDRESS=your_email@company.com

# SharePoint Configuration (Optional)
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/yoursite
SHAREPOINT_USERNAME=your_sharepoint_username
SHAREPOINT_PASSWORD=your_sharepoint_password
SHAREPOINT_FOLDER_URL=/sites/yoursite/Shared Documents/EmailTemplates

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_THEME=light
